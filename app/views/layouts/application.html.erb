<!DOCTYPE html>
<html>
<head>
  <title>SampleApp5</title>
  <%= stylesheet_link_tag :all, :recursive => true %>
  <%= javascript_include_tag :defaults %>
<%= javascript_include_tag "jquery-1.5.2.min.js" %>
<%= javascript_include_tag "grid.locale-en.js" %>
<%= javascript_include_tag "jquery-ui-1.8.12.custom.min.js" %>
<%= javascript_include_tag "jquery.jqGrid.min.js" %>

  <%= csrf_meta_tag %>
<script type=text/javascript>

	$(document).ready(function() {
		$(function(){ 
		  $("#list").jqGrid({
		    url:'invoices_json',
		    datatype: 'json',
		    mtype: 'GET',
			jsonReader : {
			      root:"invdata",
			      page: "currpage",
			      total: "totalpages",
			      records: "totalrecords",
			      repeatitems: false
			     
			   },
		    colNames:['Inv No','Date', 'Amount','Tax','Total','Notes'],
		    colModel :[ 
		      {name:'invid', index:'invid', width:55}, 
		      {name:'invdate', index:'invdate', width:90}, 
		      {name:'amount', index:'amount', width:80, align:'right'}, 
		      {name:'tax', index:'tax', width:80, align:'right'}, 
		      {name:'total', index:'total', width:80, align:'right'}, 
		      {name:'note', index:'note', width:150, sortable:false} 
		    ],
		    pager: '#pager',
		    rowNum:10,
		    rowList:[10,20,30],
		    sortname: 'invid',
		    sortorder: 'desc',
		    viewrecords: true,
		    caption: 'My first grid'
		  }); 
		});
		$('#date').datepicker();
	   $("a").click(function() {
	     alert("Hello world!");
	   });
	 });


</script>

</head>
<body>
<a href="">Link</a>
<input type="text" name="date" id="date" />

<%= yield %>

</body>
</html>
